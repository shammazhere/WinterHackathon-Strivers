{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2019",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [
        "src/**/*"
    ]
}